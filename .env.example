# Environment Configuration
NODE_ENV=development

# =============================================================================
# REQUIRED - These must be set (no defaults in compose files)
# =============================================================================

# Database password (used by postgres, temporal, backend, temporal-worker)
POSTGRES_PASSWORD=your_secure_password_here

# Authentication secret (min 32 chars)
AUTH_SECRET=changeme_at_least_32_chars_long_secret_key

# Scraping target URL
BASE_SCRAPE_URL=

# =============================================================================
# OPTIONAL - Have sensible defaults in compose files
# =============================================================================

# Frontend Configuration
FRONTEND_PORT=3000                                      # dev: 3000, prod: 80
NUXT_PUBLIC_BACKEND_URL=http://localhost:3001           # dev only, prod uses AUTH_URL

# Backend Configuration
PORT=3001
BACKEND_PORT=3001                                       # prod only
HOST=localhost

# Authentication
AUTH_URL=http://localhost:3001

# Database Configuration
POSTGRES_USER=postgres                                  # dev only
POSTGRES_DB=postgres                                    # dev only
POSTGRES_PORT=5432
# Note: DATABASE_URL is constructed in compose from POSTGRES_USER/PASSWORD/DB

# Redis Configuration
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379                        # prod backend uses this directly

# Temporal Configuration
TEMPORAL_ADDRESS=temporal:7233                          # use localhost:7233 for local dev outside docker
TEMPORAL_NAMESPACE=default
TEMPORAL_PORT=7233
TEMPORAL_UI_PORT=8080
TASK_QUEUE=bloop-tasks

# Cron Service Configuration
CRON_SERVICE_ENABLED=true
CRON_SERVICE_FREQUENCY=*/1 * * * *

# Proxy Configuration (rotating tor proxy)
PROXY_URL=http://tor-proxy:3128
